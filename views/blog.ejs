<%-include('./header.ejs')%>
<section class="featured-blog mtb-40">
    <div class="container">
        <div class="row">
            <% data.forEach((item)=>{ %>

                <div class="col-md-4 mtb-40">
                    <!-- <div class="blog-box"> -->
                    <div class="card shadow-sm">
                        <img src="/upload/<%= item.image %> " alt="blog1" />
                        <div class="card-body">
                            <h3><%=item.title.slice(0, 40) %></h3>
                                <p class="card-text"> <%=item.description.slice(0, 90) %></p>
                                    <div class="d-flex
                                        justify-content-between
                                        align-items-center">
                                        <a href="/blog/details/<%=item._id
                                            %>" class="btn btn-danger">Read
                                            more...</a>
                                        <p class="text-muted">
                                            <%=item.createdAt.toLocaleDateString('en-US')
                                                %>
                                        </p>
                                    </div>
                        </div>
                    </div>
                </div>
            <%}) %>
        </div>
     </div>
</section>


    <%-include('./footer.ejs')%>
