<%-include('../../header.ejs')%>

                    <%-include('../sidebar.ejs')%>
                    <div class="col-md-9">
                        <div class="dash-right">
                            <div class="dash-header">
                                <div class="dash-title">
                                    <h1>Create Blog</h1>
                                </div>
                            </div>
                            <div class="blog-form">
                                <form action="/blog/update/<%=data._id %>"
                                    method="post" enctype="multipart/form-data">
                                    <div class="form-group form-row">
                                        <label class="col-md-3">Title <span
                                                class="required">*</span></label>
                                        <div class="col-md-9">
                                            <input type="text" name="title"
                                                class="form-control"
                                                placeholder="Title" value="<%=data.title
                                                %>" required >
                                        </div>
                                    </div>

                                    <!-- <div class="form-group form-row">
                                        <label class="col-md-3">Upload Image</label>
                                        <div class="col-md-9">
                                            <input type="file" id="image" />
                                        </div>
                                    </div> -->
                                    <div class="form-group form-row">
                                        <label class="col-md-3">Description
                                            <span class="required">*</span></label>
                                        <div class="col-md-9">
                                            <textarea name="description"
                                                rows="5" class="form-control"
                                                placeholder="Description"
                                                required><%=data.description %></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group form-row">
                                            <label class="col-md-3">Image
                                                <span class="required">*</span></label>
                                            <div class="col-md-9">
                                                <input type="file" name="image" val>
                                                <img src="/upload/<%=data.image %>" alt="" width="250px">
                                            </div>
                                        </div>
                                        <div class="form-group form-row">
                                            <label class="col-md-3"></label>
                                            <div class="col-md-9">
                                                <button type="submit" class="btn
                                                    btn-primary">Save</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%-include('../../footer.ejs')%>
